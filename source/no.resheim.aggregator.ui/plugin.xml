<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               id="no.resheim.aggregator.core.ui.RSSView"
               ratio="0.5"
               relationship="stack"
               relative="org.eclipse.ui.navigator.ProjectExplorer"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:no.resheim.aggregator.core.ui.RSSView?after=additions">
         <command
               commandId="no.resheim.aggregator.core.ui.collapseAll"
               label="Collapse All"
               style="push">
         </command>
         <separator
               name="no.resheim.aggregator.ui.separator1"
               visible="true">
         </separator>
         <command
               commandId="no.resheim.aggregator.core.ui.addFeed"
               label="New Feed"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:no.resheim.aggregator.core.ui.RSSView?after=additions">
         <menu
               label="Collections">
            <visibleWhen
                  checkEnabled="false">
               <test
                     forcePluginActivation="true"
                     property="no.resheim.aggregator.multipleCollections">
               </test>
            </visibleWhen>
            <dynamic
                  class="no.resheim.aggregator.core.ui.commands.FeedCollectionMenu"
                  id="no.resheim.aggregator.ui.dynamic">
            </dynamic>
         </menu>
      </menuContribution>
   </extension>

</plugin>
